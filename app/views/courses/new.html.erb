<% content_for :title, "수업 개설하기 | #{current_user.name}님의 대시보드" %>
<% content_for :main_class, "--fixed" %>

<div class="row justify-content-center">
  <div class="col-md-9 height--max">
    <header class="dashboard__header fixed--height flex--freeze">
      <h1>수업 개설하기</h1>
    </header>

    <section class="dashboard__content pb-80">
      <%= form_for(@course) do |f| %>
        <%= render partial: "form", locals: { user: @user, f: f, btn: "수업 개설하기" }  %>
      <% end %>
    </section>
  </div>
</div>