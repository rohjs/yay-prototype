<% content_for :title, "#{@course.title} | #{current_user.name}님의 대시보드" %>
<% content_for :main_class, "--fixed" %>

<% if user_signed_in? %>
  <% if is_teacher?(current_user) %>
    <%= render partial: "show_teacher", locals: { course: @course, students: @students, user: @user } %>
  <% else %>
    <%= render partial: "show_student", locals: { course: @course, user: @user } %>
  <% end %>
<% end %>
